pipeline {
  agent any
  tools {
    maven "M3"
    jdk "JDK11"
  }
  
  stages {
    stage('Git fetch') {
      steps {
        echo 'Git fetch'
        git url: 'https://github.com/sjh9397/spring-petclinic.git/',
          branch: 'main', credentialsId: 'gitCrednetial'
    }
  }
     stage('Maven Build') {
      steps {
        echo 'Maven Build'
        sh 'mvn -Dmaven.test.failure.ignore=true clean package'
    }
  }
     stage('Docker Image') {
      steps {
        echo 'Docker Image'
        dir("${env.WORKSPACE}"){
         sh 'docker build -t aws07-spring-petclinic:1.0'  
      }
    }
  }
     stage('Image push') {
      steps {
        echo 'Image push'
    }
  }
     stage('Codedeploy Workload') {
      steps {
        echo 'Codedeploy Workload'
    }
  }
 }
}
